<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invite Member - Project Management Tool</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/custom.css">
  <style>
    body { background: #f8f6ff; }
    .purple-btn { background: #7c3aed; color: #fff; border: none; }
    .purple-btn:hover { background: #5b21b6; }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="card shadow p-4 mx-auto" style="max-width: 500px;">
      <h2 class="fw-bold mb-3" style="color:#7c3aed;"><i class="fa-solid fa-user-plus"></i> Invite Member</h2>
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <% if (typeof success !== 'undefined') { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
      <form method="POST" action="/projects/<%= project._id %>/invite">
        <div class="mb-3">
          <label class="form-label">Username or Email</label>
          <input type="text" name="usernameOrEmail" class="form-control" required>
        </div>
        <button type="submit" class="btn purple-btn w-100">Invite</button>
      </form>
      <h5 class="mt-4">Current Members</h5>
      <ul class="list-group">
        <% project.members.forEach(member => { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span><i class="fa-solid fa-user"></i> <%= member.username %> (<%= member.email %>)</span>
            <% if (member._id.toString() !== project.createdBy.toString()) { %>
              <form method="POST" action="/projects/<%= project._id %>/remove/<%= member._id %>" onsubmit="return confirm('Remove this member?');">
                <button type="submit" class="btn btn-sm btn-danger"><i class="fa-solid fa-user-minus"></i></button>
              </form>
            <% } %>
          </li>
        <% }) %>
      </ul>
      <div class="mt-3 text-center">
        <a href="/projects/<%= project._id %>" style="color:#7c3aed;">Back to Project</a>
      </div>
    </div>
  </div>
</body>
</html> 