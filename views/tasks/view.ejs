<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Details - Project Management Tool</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/custom.css">
  <style>
    body { background: #f8f6ff; }
    .purple-btn { background: #7c3aed; color: #fff; border: none; }
    .purple-btn:hover { background: #5b21b6; }
    .purple-card { background: #ede9fe; border: none; }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="card purple-card shadow p-4 mb-4">
      <h2 class="fw-bold mb-2" style="color:#7c3aed;"><i class="fa-solid fa-thumbtack"></i> <%= task.title %></h2>
      <p><%= task.description %></p>
      <p>Status: <span class="badge bg-secondary"><%= task.status %></span></p>
      <p>Assigned to: <%= task.assignedTo ? task.assignedTo.username : 'Unassigned' %></p>
      <div class="mt-4 d-flex gap-2">
        <a href="/tasks/<%= task._id %>/edit" class="btn purple-btn"><i class="fa-solid fa-pen"></i> Edit</a>
        <form method="POST" action="/tasks/<%= task._id %>/delete" onsubmit="return confirm('Delete this task?');">
          <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</button>
        </form>
        <a href="/projects/<%= task.project._id %>" class="btn btn-outline-secondary">Back</a>
      </div>
    </div>
    <div class="mt-5">
      <h4 style="color:#7c3aed;"><i class="fa-solid fa-comments"></i> Comments</h4>
      <div id="comments-list"></div>
      <form id="comment-form" class="mt-3 d-flex gap-2">
        <input type="text" id="comment-input" class="form-control" placeholder="Add a comment..." required>
        <button type="submit" class="btn purple-btn"><i class="fa-solid fa-paper-plane"></i></button>
      </form>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const taskId = "<%= task._id %>";
      const commentsList = document.getElementById('comments-list');
      const commentForm = document.getElementById('comment-form');
      const commentInput = document.getElementById('comment-input');
      const socket = io();
      socket.emit('joinTask', taskId);
      function loadComments() {
        fetch(`/tasks/${taskId}/comments`).then(res => res.text()).then(html => {
          commentsList.innerHTML = html;
        });
      }
      loadComments();
      commentForm.addEventListener('submit', function(e) {
        e.preventDefault();
        fetch(`/tasks/${taskId}/comments`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ text: commentInput.value })
        }).then(() => {
          commentInput.value = '';
        });
      });
      socket.on('newComment', data => {
        if (data.taskId === taskId) loadComments();
      });
    </script>
  </div>
</body>
</html> 