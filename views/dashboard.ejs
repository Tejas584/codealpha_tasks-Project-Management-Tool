<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Project Management Tool</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/custom.css">
  <style>
    body { background: #f8f6ff; }
    .purple-btn { background: #7c3aed; color: #fff; border: none; }
    .purple-btn:hover { background: #5b21b6; }
    .purple-card { background: #ede9fe; border: none; }
  </style>
</head>
<body>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    socket.emit('registerUser', "<%= user._id %>");
  </script>
  <nav class="navbar navbar-expand-lg navbar-light purple-card mb-4">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" style="color:#7c3aed;" href="/dashboard">
        <i class="fa-solid fa-layer-group"></i> Project Management Tool
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
        <span class="me-3">Hello, <%= user.username %></span>
        <%- include('partials/notifications') %>
        <a href="/logout" class="btn btn-outline-secondary ms-2">Logout</a>
      </div>
    </div>
  </nav>
  <div class="container-fluid mt-4">
    <div class="row justify-content-center">
      <div class="col-12 d-flex justify-content-center">
        <div class="card purple-card shadow-sm w-100 mx-4" style="margin-bottom: 2rem; max-width: 1200px;">
          <div class="card-body w-100">
            <h4 class="card-title mb-3" style="color:#7c3aed;"><i class="fa-solid fa-folder-open"></i> Your Projects</h4>
            <div class="mb-2">
              <a href="/dashboard" class="btn btn-sm <% if (!showArchived) { %>purple-btn<% } else { %>btn-outline-secondary<% } %>">Active</a>
              <a href="/dashboard?archived=1" class="btn btn-sm <% if (showArchived) { %>purple-btn<% } else { %>btn-outline-secondary<% } %>">Archived</a>
            </div>
            <% if (projects.length === 0) { %>
              <p>No projects yet.</p>
            <% } else { %>
              <ul class="list-group">
                <% projects.forEach(project => { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span>
                      <i class="fa-solid fa-folder"></i> <%= project.name %>
                      <% if (project.completed) { %> <span class="badge bg-success">Completed</span> <% } %>
                      <% if (project.archived) { %> <span class="badge bg-secondary">Archived</span> <% } %>
                    </span>
                    <div class="d-flex gap-1">
                      <a href="/projects/<%= project._id %>" class="btn btn-sm purple-btn">View</a>
                      <% if (user._id.toString() === project.createdBy.toString()) { %>
                        <% if (!project.archived) { %>
                          <form method="POST" action="/projects/<%= project._id %>/archive" style="display:inline;"><button type="submit" class="btn btn-sm btn-outline-secondary">Archive</button></form>
                        <% } else { %>
                          <form method="POST" action="/projects/<%= project._id %>/unarchive" style="display:inline;"><button type="submit" class="btn btn-sm btn-outline-secondary">Unarchive</button></form>
                        <% } %>
                        <% if (!project.completed) { %>
                          <form method="POST" action="/projects/<%= project._id %>/complete" style="display:inline;"><button type="submit" class="btn btn-sm btn-outline-success">Complete</button></form>
                        <% } else { %>
                          <form method="POST" action="/projects/<%= project._id %>/uncomplete" style="display:inline;"><button type="submit" class="btn btn-sm btn-outline-warning">Uncomplete</button></form>
                        <% } %>
                      <% } %>
                    </div>
                  </li>
                <% }) %>
              </ul>
            <% } %>
            <a href="/projects/new" class="btn purple-btn mt-3 w-100"><i class="fa-solid fa-plus"></i> New Project</a>
          </div>
        </div>
      </div>
